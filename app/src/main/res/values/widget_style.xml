<resources>

    <style name="Dialog" parent="android:Theme.Material.Dialog">
        <item name="android:textColor">?attr_color_text_inverse</item>
        <item name="android:textColorPrimary">?attr_color_text_lightish</item>
        <item name="android:textColorPrimaryDisableOnly">?attr_color_text</item>
        <item name="android:colorForeground">?attr_color_text_lightish</item>
        <item name="colorPrimary">?attr_color_primary</item>
        <item name="colorAccent">?attr_color_accent</item>
        <item name="colorPrimaryDark">?attr_color_primary_dark</item>
        <item name="android:windowBackground">?attr_color_primary</item>
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="Dialog.Dark">
        <item name="android:windowBackground">?attr_color_background</item>
    </style>

    <style name="ToolBarLight" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorForeground">?attr_color_text_inverse</item>
        <item name="android:colorButtonNormal">?attr_color_text_inverse</item>
        <item name="android:actionMenuTextColor">?attr_color_text_inverse</item>
    </style>

    <style name="UserDetailCollapsingBarLayout">
        <item name="android:textColor">?attr_color_text_inverse</item>
        <item name="android:textSize">9pt</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">7pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextNormal">
        <item name="android:textSize">7pt</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextSmall">
        <item name="android:textSize">5pt</item>
        <item name="android:textColor">@color/accent</item>
    </style>

</resources>