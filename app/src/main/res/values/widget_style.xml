<resources>

    <style name="LightDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">?attr_color_primary</item>
        <item name="colorPrimary">?attr_color_primary</item>
        <item name="colorAccent">?attr_color_accent</item>
        <item name="colorButtonNormal">?attr_color_primary</item>
        <item name="colorPrimaryDark">?attr_color_primary_dark</item>
        <item name="android:height">180dp</item>
        <item name="android:width">280dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="ToolBarLight" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorForeground">?attr_color_text_inverse</item>
        <item name="android:colorButtonNormal">?attr_color_text_inverse</item>
        <item name="android:actionMenuTextColor">?attr_color_text_inverse</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">7pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextNormal">
        <item name="android:textSize">7pt</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextSmall">
        <item name="android:textSize">5pt</item>
        <item name="android:textColor">@color/accent</item>
    </style>

</resources>