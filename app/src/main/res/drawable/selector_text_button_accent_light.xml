<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true"
        android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr_color_primary_light"/>
            <corners android:radius="2dp"/>
            <padding android:bottom="8dp"
                android:right="12dp"
                android:top="8dp"
                android:left="12dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="?attr_color_text_lightish"/>
            <corners android:radius="2dp"/>
            <padding android:bottom="8dp"
                android:right="12dp"
                android:top="8dp"
                android:left="12dp"/>
        </shape>
    </item>

</selector>